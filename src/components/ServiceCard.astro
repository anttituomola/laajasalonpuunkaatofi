---
interface Props {
  title: string;
  image: string;
  imageAlt: string;
  description?: string;
  link?: string;
}

const { title, image, imageAlt, description, link = '/ota-yhteytta' } = Astro.props;
---

<div class="service-card">
  <div class="service-image">
    <img 
      src={image} 
      alt={imageAlt} 
      loading="lazy" 
      decoding="async"
      width="400"
      height="250"
    />
  </div>
  <div class="service-content">
    <h3>{title}</h3>
    {description && <p>{description}</p>}
    <a href={link} class="btn-service">Ota yhteytt√§</a>
  </div>
</div>

<style>
  .service-card {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .service-image {
    width: 100%;
    height: 250px;
    overflow: hidden;
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .service-content {
    padding: 1.5rem;
  }

  .service-content h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .service-content p {
    color: #666;
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .btn-service {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border: 2px solid #2d5016;
    color: #2d5016;
    border-radius: 4px;
    font-weight: 600;
    transition: background-color 0.3s, color 0.3s;
  }

  .btn-service:hover {
    background: #2d5016;
    color: white;
  }
</style>

