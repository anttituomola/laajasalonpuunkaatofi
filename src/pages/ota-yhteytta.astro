---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
import ContactInfo from '../components/ContactInfo.astro';
---

<BaseLayout
  title="Ota yhteyttä"
  description="Ota yhteyttä Laajasalon Puunkaatopalveluun. Varaa ilmainen kartoitus puunkaatotyölle Helsingissä tai Laajasalossa. Puhelin: +358 50 514 8294, Sähköposti: ville@laajasalonpuunkaato.fi"
  keywords="puunkaato kartoitus, ilmainen kartoitus puunkaato, puunkaato yhteydenotto, arboristi Helsinki yhteydenotto"
>
  <Header />
  
  <Hero 
    title="Varaa ilmainen kartoitus puunkaatotyölle"
    showButtons={false}
  />

  <main>
    <section class="contact-page-section">
      <div class="container">
        <div class="contact-wrapper">
          <ContactInfo />
          <ContactForm />
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<!-- Breadcrumb Structured Data -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Etusivu",
      "item": "https://laajasalonpuunkaato.fi/"
    },
    {
      "@type": "ListItem",
      "position": 2,
      "name": "Ota yhteyttä",
      "item": "https://laajasalonpuunkaato.fi/ota-yhteytta"
    }
  ]
})} />

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  main {
    min-height: 50vh;
  }

  .contact-page-section {
    padding: 5rem 0;
    background: white;
  }

  .contact-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  @media (max-width: 968px) {
    .contact-wrapper {
      grid-template-columns: 1fr;
    }
  }
</style>


